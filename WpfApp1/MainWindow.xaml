<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BitmapImage x:Key="UerName" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="C:\\Users\\Administrator\\Desktop\\bg2.gif"/>
        <Style x:Key="UserNameTemplate" TargetType="{x:Type TextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush Stretch="Fill" ImageSource="{DynamicResource UerName}"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="gridBackground"  ></ImageBrush>
        </Grid.Background>
        <MediaElement  Panel.ZIndex="0" Source="file://C:\\Users\\Administrator\\Desktop\\bg.gif" />
        <Button Content="按钮" HorizontalAlignment="Left" Margin="88,143,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click_1"/>
        <Label Content="姓名：" HorizontalAlignment="Left" Margin="30,39,0,0" VerticalAlignment="Top"/>
        <TextBox Name="NameText" HorizontalAlignment="Left" Height="23" Margin="88,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="OutPutText" HorizontalAlignment="Left" Height="86" Margin="408,26,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="194" />
